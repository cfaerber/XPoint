#! /bin/bash
# quick and dirty install script for xp
# Rev 20030918-1 Thunus F.
#
if [ 'id -u $USENAME' = 0 ] ; then
	if [ ! -f /usr/lib/openxp] ; then 
	 mkdir /usr/lib/openxp
	fi
	if [ ! -f /usr/lib/openxp/bin] ; then 
	mkdir /usr/lib/openxp/bin
	fi
	if [ ! -f /usr/lib/openxp/lib] ; then 
	mkdir /usr/lib/openxp/lib
	fi
	if [ ! -f /usr/lib/openxp/doc] ; then 
	mkdir /usr/lib/openxp/doc
	fi
	mv openxp /usr/lib/openxp/bin
	mv *.res /usr/lib/openxp/lib
	mv doc/*.hlp /usr/lib/openxp/doc
	ln -s /usr/lib/openxp/bin/openxp /usr/local/bin/xp
 	echo "done"	;
else
	echo "sorry, you have to be root to run this script"
fi
